{% extends 'base.html.twig' %}

{% block title %}E-commerce{% endblock %}


{% block body %}
<main class="container">
    <section class="row">
        <div class="col-12">
            <h1>Bienvenue dans notre boutique</h1>
            <p>Acceuil<p>
        </div>
        {% for article in article %}
            <div class="card h-100">
                <div class="card-body">
                    <h3 class="card-title">{{ article.Nom }}</h3>
                    <p class="card-text">{{ article.description }}</p>
                    <a href="{{ path('products_details', {id: article.id}) }}" class="btn btn-primary">Look Details</a>
                </div>
            </div>


        {% endfor %}
    </section>
</main>

{% endblock %}
