{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <section class="container">
        <div class="row">
            <div class="col">
                <h1>Inscription</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                <fieldset class="mb-3">
                    <legend>
                        Mon Identité
                    </legend>
                    {{ form_row(registrationForm.username) }}
                    {{ form_row(registrationForm.email) }}
                </fieldset>
                <fieldset class="mb-3">
                    <legend>
                        Infos Personnelles supplémentaires
                    </legend>
                    {{ form_row(registrationForm.solde) }}
                    {{ form_row(registrationForm.photo_de_profil) }}
                </fieldset>
                <fieldset class="mb-3">
                    <legend>
                        Mot de passe et RGPD Consentement
                    </legend>
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_row(registrationForm.RGPDConsent) }}
                </fieldset>

                <button type="submit" class="btn btn-primary btn-lg">M'inscrire</button>
                <a href="{{ path('app_login') }}" class="btn btn-secondary">Me connecter</a>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>

{% endblock %}
